<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.screen.main.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <ru.svetomech.currencyconverter.ui.screen.main.activity.CurrencyEdit
        android:id="@+id/currency_rub_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toStartOf="@+id/currency_rub_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ru.svetomech.currencyconverter.ui.screen.main.activity.CurrencyEdit
        android:id="@+id/currency_first_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/currency_first_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency_rub_text" />

    <ru.svetomech.currencyconverter.ui.screen.main.activity.CurrencyEdit
        android:id="@+id/currency_second_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/currency_second_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency_first_text" />

    <ru.svetomech.currencyconverter.ui.screen.main.activity.CurrencyEdit
        android:id="@+id/currency_third_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/currency_third_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currency_second_text" />

    <TextView
        android:id="@+id/currency_rub_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="RUB"
        app:layout_constraintBaseline_toBaselineOf="@+id/currency_rub_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/currency_first_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="USD"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/currency_first_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/currency_second_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="EUR
"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/currency_second_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/currency_third_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="AUD
"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/currency_third_text"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>